# Database Connection
# PostgreSQL connection string in the format:
# postgresql://[user]:[password]@[host]:[port]/[database]?schema=[schema]
DATABASE_URL="postgresql://postgres:password@localhost:5432/helpdesk_system?schema=public"

# Authentication
# Secret key for JWT tokens (MUST be at least 32 characters in production)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-secret-key-change-this-in-production-min-32-chars"

# Server Configuration
# Port for the backend server (default: 5000)
PORT=5000

# Environment (development, production, test)
NODE_ENV="development"

# Frontend URL for CORS configuration
# This should match your frontend application URL
FRONTEND_URL="http://localhost:5173"